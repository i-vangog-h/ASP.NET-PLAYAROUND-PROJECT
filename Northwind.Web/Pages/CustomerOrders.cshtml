@page
@using Northwind.EntityModels;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Northwind.Web.Pages.CustomerOrdersModel;

<div class="row">
    <h1 class="display-4">Contact & Order details for Customer #@Model.Customer?.CustomerId</h1>
    @if (Model.Customer is not null)
    {
        Customer customer = Model.Customer; 
        <partial name="_CustomerDetails" model="customer"/>
        <div class="row">
            <h1> Order Details </h1>
            <p>This customer has @customer.Orders.Count() orders.</p>
            @foreach (Order order in customer.Orders)
            {
                <partial name="_OrderDetails" model="order" />
            }
        </div>
    }
    else
    {
        <p>@ViewData["Placeholder"]</p>
    }
</div>
    